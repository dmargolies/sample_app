<h1>Tabs</h1>
<p>
	Remember which tab you are on after submitting form
</p>

<div class="tabbable"> <!-- Only required for left/right tabs -->
  <ul class="nav nav-tabs">
    <li class = <%= "active" unless @tab.to_i!=1%>><a href="#tab1" data-toggle="tab">Section 1</a></li>
    <li  class = <%= "active" unless @tab.to_i!=2%>><a href="#tab2" data-toggle="tab">Section 2</a></li>
    <li  class = <%= "active" unless @tab.to_i!=3%>><a href="#tab3" data-toggle="tab">Section 3</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane <%= "active" unless @tab.to_i!=1%>" id="tab1">
      <p>I'm in Section 1.</p>
      <form class="navbar-form pull-left" method = "post">
  		<input type="text" class="span2" name="data">
  		<button type="submit" class="btn" >Submit</button>
  		<input type = "hidden" value="1" name="tab">
	  </form>
    </div>
    <div class="tab-pane <%= "active" unless @tab.to_i!=2%>" id="tab2">
      <p>Howdy, I'm in Section 2.</p>
      <form class="navbar-form pull-left" method = "post">
  	   <input type="text" class="span2" name = "data">
       <button type="submit" class="btn" >Submit</button>
       <input type = "hidden" value="2" name="tab">
      </form>
    </div>
    <div class="tab-pane <%= "active" unless @tab.to_i!=3%>" id="tab3">
      <p>Yes this is section 3</p>
      <form class="navbar-form pull-left" method = "post">
  	   <input type="text" class="span2" name = "data">
       <button type="submit" class="btn" >Submit</button>
       <input type = "hidden" value="3" name="tab">
      </form>
    </div>
  </div>
</div>
